<script>

  $(document).ready(function(){


    $("#btnImprimir").click(function(){
      window.print();
    })


    $("#btnCerrar").click(function(){
      parent.window.close();
    })


    $("#circulo").mouseenter(function(){
      $("#btns").css("opacity","1");

        $("#btns").mouseleave(function(){
              $("#btns").css("opacity","0");
            });
    });

  })

</script>



{% extends 'base.html.twig' %}

{% block title %}{% endblock %}


{% block body %}

{% set activo = "" %}


    <script>
        $(document).ready(function(){

        });
    </script>

    <style media="screen">
      .activo{background: rgb(147, 182, 221)}
    </style>

    <br>



    <div class="container">

        <br>
        <section id="tabs">
            <h6 class="section-title h1" style="float:left;">
                Gestión de familias
            </h6>

            <br>
            <br>
            <br>
            <br>

            <div class="row">
                <div class="col-lg-12 ">
                  <nav>
                    <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link" id="nav-vistaPrevia-tab" href="/gestionar/articulos" role="tab" aria-controls="nav-vistaPrevia" aria-selected="false">Artículos</a>
                        <a class="nav-item nav-link active" id="nav-cabecera-tab"  href="/gestionar/familias" aria-controls="nav-cabecera" aria-selected="true">Familias</a>
                        <a class="nav-item nav-link" id="nav-editarList-tab"  href="/gestionar/marcas" role="tab" aria-controls="nav-editarList" aria-selected="false">Marcas</a>
                        <a class="nav-item nav-link" id="nav-editarList-tab"  href="/gestionar/dependencias" role="tab" aria-controls="nav-editarList" aria-selected="false">Dependencias</a>
                    </div>
                  </nav>


                        <!-------------------------- tab 1 ---------------------->
                        <div class="tab-pane fade show active" id="nav-vistaPrevia" role="tabpanel" aria-labelledby="nav-vistaPrevia-tab">

                          <div class="row row justify-content-between">

                              <div class="col-6">
                                <br>
                                <h4>Lista de artículos</h4>
                                <br>
                                <table class="table table-hover">
                                    {% for familia in familia %}

                                    {% if familia.id == idFamilia %}
                                      {%  set activo = "activo" %}
                                      {%  else %}
                                      {%  set activo = "" %}

                                    {%  endif %}


                                      <tr class="{{activo}}">
                                        <td >
                                          {{familia.familia}}
                                        </td>


                                        <td style="text-align:right;">
                                          <a href="/gestionar/familiasBorrar/{{ familia.id  }}">
                                            <img src="/imagenes/borrar.png">
                                          </a>

                                          <a href="/gestionar/familiasEditar/{{ familia.id  }}">
                                            <img src="/imagenes/editar.png"  >
                                          </a>
                                        </td>


                                      </tr>
                                    {% endfor %}
                                </table>
                              </div>

                              <div class="col-6"  >
                                <br>
                                <h4>{{familia|length}} Familias disponibles</h4>
                                <br>



                                <div class="alert alert-info " >
                                  <p> * Al enviar el formulario se modificarán todos los campos afectados a esta marca.</p>
                                  <hr>

                                  {{ form_start(formEditar) }}
                                  {{ form_widget(formEditar) }}
                                  {{ form_end(formEditar) }}

                                </div>


                        </div>

                        <!-------------------------- tab 2 ---------------------->
                        <div class="tab-pane fade" id="nav-cabecera" role="tabpanel" aria-labelledby="nav-cabecera-tab">
                        </div>

                        <!-------------------------- tab 3 ---------------------->
                        <div class="tab-pane fade" id="nav-editarList" role="tabpanel" aria-labelledby="nav-editarList-tab">

                        </div>
                </div>
                </div>

            </div>
        </section>

        <!-- ./Tabs -->

    </div>



{% endblock %}

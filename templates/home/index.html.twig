{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}



{% block body %}

    <style>
        #top_x_div{
                    width:500px;
                    height: 300px;

                }


    </style>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>



    <script>



        google.charts.load('current', {packages: ['corechart', 'bar']});
             google.charts.setOnLoadCallback(drawStuff);


        /******************************************************************************/
        /*****************************GRÁFICO DCE BARRAS ******************************/
        /******************************************************************************/


        function drawStuff() {
            var data = new google.visualization.arrayToDataTable([

                ['Artículo', 'Cantidad'],
                {% for art in art %}
                    ['{{ art.articulo }}', '{{ art.cantidad }}'],
                {% endfor %}


            ]);




            var options = {


                title: 'Cantidad de artículos disponibles',
                width: 900,
                legend: { position: 'none' },
                chart: { title: 'Cantidad de Atículos disponibles',
                    subtitle: 'Stock actual',
                },
                bars: 'horizontal', // Required for Material Bar Charts.
                axes: {
                    x: {
                        0: { side: 'top', label: 'Cantidad'} // Top x-axis.
                    }
                },



                bar: { groupWidth: "90%" }




            };





            var chart = new google.charts.Bar(document.getElementById('top_x_div'));
            chart.draw(data, options);
        }


    </script>





    <div class="jumbotron">
        <h1 class="display-4">Stock</h1>
    </div>

    <div class="row">


        <div id="top_x_div" class="col" ></div>


    </div>



    
{% endblock %}
